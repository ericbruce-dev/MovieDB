@using MovieDB.Models.TMDB
@model ActorDetail

<div class="row media">
<div class="col-sm-12 col-md-3">
    <img src="@Model.profile_path" class="h-100 w-100 mr-3" alt="..." />
</div>
    <div class="media-body col-sm-12 col-9">
        <table class="table table-hover">
            <tbody>
                <tr>
                    <td>Name:</td>
                    <td>
                        @Model.name
                    </td>
                </tr>
                    <tr>
                    <td>Biography:</td>
                    <td>
                        @Model.biography
                    </td>
                </tr>
                    <tr>
                    <td>Birthday:</td>
                    <td>
                        @Model.birthday
                    </td>
                </tr>
                    <tr>
                    <td>Place of Birth:</td>
                    <td>
                        @Model.place_of_birth
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
 @*</div>*@
</div>